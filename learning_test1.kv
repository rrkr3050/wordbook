                ActionButton:
                    text: "戻る"
                    on_press: 
                        root.manager.current = 'home'
                        root.reset()

                ActionButton:
                    text: "ホーム"
                    on_press: 
                        root.manager.current = 'home'
                        root.reset()
        BoxLayout:
            orientation:'vertical'
            size_hint_y: 10
            Label:
                id:beforedeck_text1
                font_size: 40
                text:root.text
                size_hint_y: 5
                color :  0, 0, 0, 1

            Label:
                id:beforedeck_text2
                font_size: 30
                text:root.text
                size_hint_y: 5
                color :  0, 0, 0, 1

            Label:
                id:beforedeck_text3
                font_size: 30
                text:root.text
                size_hint_y: 5
                color :  0, 0, 0, 1
        

        BoxLayout:
            size_hint_y: 1
            Button:
                id:gofront
                text:"グループの学習に進む"
                font_size:25
                on_press: root.gofront_button()

            Button:
                id:gohome
                text:"ホームに戻る"
                font_size:25
                on_press: root.gohome_button()

